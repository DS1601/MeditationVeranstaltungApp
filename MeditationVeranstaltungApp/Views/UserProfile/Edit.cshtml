@model KontaktModel

@{
    ViewData["Title"] = "Benutzer Kontakt Info";
}

<div class="container pt-3 pb-3">
    <div class="d-flex justify-content-between">
        <h3>Benutzer Kontakt Info</h3>

        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#PasswortAenderenModal">Passwort änderen</button>


        <!-- Modal -->
        <div class="modal fade" id="PasswortAenderenModal" tabindex="-1" aria-labelledby="PasswortAenderenModal" aria-hidden="true">
            <div class="modal-dialog">

                <div class="modal-content">
                    <form asp-action="ChangePassword" class="d-flex flex-column p-3 gap-3">
                        <div class="modal-header">
                            <h5 class="modal-title" id="PasswortAenderenModal">Passwort ändern</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">


                            <div class="flex-fill">
                                <label for="altesPasswort" class="form-label">Altes Passwort:</label>
                                <input type="password" class="form-control" #altesPasswort id="altesPasswort" name="altesPasswort">
                            </div>
                            

                            <div class="flex-fill">
                                <label for="neuesPasswort" class="form-label">Neues Passwort:</label>
                                <input type="password" class="form-control" #neuesPasswort id="neuesPasswort" name="neuesPasswort">
                            </div>



                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                            <button type="submit" class="btn btn-danger">Passwort ändern</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>


    </div>
    <form asp-action="UserSubmit" method="post" class="d-flex flex-column pt-3 gap-3">

        <div class="d-flex p-3 flex-column" style="position: relative;border: 1px dotted black; border-radius: 5px;">
            <h5 style="background-color: white;position: absolute; top: -15px; left: 45%;">&nbsp;&nbsp;Kontakt Info&nbsp;&nbsp;</h5>


            <div class="d-flex flex-fill mt-1" style="gap:20px;">
                <input hidden class="form-control" asp-for="KontaktId" id="KontaktId" name="KontaktId">
                <input hidden class="form-control" asp-for="UserId" id="UserId" name="UserId">
                <div class="flex-fill">
                    <label for="Anrede" class="form-label">Anrede:</label>
                    <select class="form-select" asp-for="Anrede" id="Anrede" name="Anrede">
                        <option>Herr</option>
                        <option>Frau</option>
                        <option>--</option>
                    </select>
                </div>
                <div class="flex-fill">
                    <label for="Vorname" class="form-label">Vorname:</label>
                    <input type="text" class="form-control" asp-for="Vorname" id="Vorname" name="Vorname">
                </div>
                <div class="flex-fill">
                    <label for="Nachname" class="form-label">Nachname:</label>
                    <input type="text" class="form-control" asp-for="Nachname" id="Nachname" name="Nachname">
                </div>

            </div>
            <div class="d-flex mt-1" style="gap:20px;">
                <div class="flex-fill">
                    <label for="Email" class="form-label">Email:</label>
                    <input type="Email" class="form-control" asp-for="Email" id="Email" name="Email">
                </div>

                <div class="flex-fill">
                    <label for="Telefon" class="form-label">Telefon:</label>
                    <input type="tel" class="form-control" asp-for="Telefon" id="Telefon" name="Telefon">
                </div>
            </div>

            <div class="d-flex mt-1" style="gap:20px;">
                <div class="flex-fill">
                    <label for="Stadt" class="form-label">Stadt:</label>
                    <input type="text" class="form-control" asp-for="Stadt" id="Stadt" name="Stadt">
                </div>

                <div class="flex-fill">
                    <label for="Land" class="form-label">Land:</label>
                    <input type="text" class="form-control" asp-for="Land" id="Land" name="Land">
                </div>

            </div>
        </div>

        <div class="d-flex p-3 justify-content-between">
            <button type="button" class="btn btn-primary" onclick="history.back()">Zurück</button>
            <button type="submit" class="btn btn-primary">Speichern</button>
        </div>
    </form>
</div>